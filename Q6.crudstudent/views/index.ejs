        <tbody>
            <% students.forEach((student)=> { %>
                    <tr>
                        <td><%= student.name %></td>
                        <td><%= student.department %></td>
                        <td><%= student.year %></td>
                        <td>
                            <a class="btn btn-primary" href="/edit/<%= student.id %>">Edit</a>
                            <form style="display: inline;" action="/delete/<%= student.id %>?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                            </form>
                        </td>
                    </tr>
               <% }) %>
                

            </tbody>
        </table>
    </div>
