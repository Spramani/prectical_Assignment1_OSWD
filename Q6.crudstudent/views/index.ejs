<%- include('partials/header') -%>

<div class="container mt-5">
    <%- include('partials/messages') -%>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>name</th>
                <th>Department</th>
                <th>Year</th>
                <th>Operations</th>
            </tr>
        </thead>
