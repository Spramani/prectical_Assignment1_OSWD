<%- include('partials/header') -%>
<div class="container mt-5 w-50">

    <h2 class="mb-4">Add New Student</h2>

    <form action="/student/new" method="POST">
        <input type="text" name="name" class="form-control" placeholder="Enter Student Name">

        <input type="text" name="department" class="form-control" placeholder="Enter Student Department">

        <input type="text" name="year" class="form-control" placeholder="Enter Student Year">

        <button type="submit" class="btn btn-danger btn-block mt-3">Add to Database</button>

    </form>
</div>
